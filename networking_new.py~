import socket

def serve_forever(port, handler, heart_queue, internal_flag=False):
    host = ''
    port = 50000
    backlog = 5
    size = 1024
    s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    s.bind((host,port))
    s.listen(backlog)
    while 1:
        heart_queue.put('server: '+str(PORT))
        client, address = s.accept()
        data = client.recv(size)
        data=handler(data)
        if data:
            client.send(data)
        client.close() 
def connect(port, handler, heart_queue, internal_flag=False):
    if internal_flag:
        host = 'localhost'
    else:
        host='0.0.0.0'
    port = 50000
    size = 1024
    s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    s.connect((host,port))
    s.send('Hello, world')
    data = s.recv(size)
    s.close()
    print 'Received:', data 
